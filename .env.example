# Paperlyte Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control

# Development server configuration
# Port for Vite dev server (default: 5173)
# VITE_PORT=5173

# API Configuration (when backend is implemented)
# Base URL for API endpoints
# VITE_API_BASE_URL=http://localhost:3000/api

# Feature Flags (for gradual rollout of new features)
# Enable dark mode feature
# VITE_FEATURE_DARK_MODE=false
# Enable analytics
# VITE_FEATURE_ANALYTICS=false

# Analytics Configuration (privacy-first, GDPR-compliant)
# Enable/disable analytics (default: true in production, false in development)
VITE_ANALYTICS_ENABLED=false

# Analytics provider: plausible (recommended), fathom, umami, simple
# VITE_ANALYTICS_PROVIDER=plausible

# Your domain/site ID for the analytics service
# For Plausible: your website domain (e.g., paperlyte.com)
# For Fathom: your site ID
# For Umami: your website ID
# VITE_ANALYTICS_DOMAIN=

# Custom API endpoint URL (optional, uses provider default if not set)
# For Plausible: https://plausible.io/js/script.js (default)
# For self-hosted Plausible: https://your-domain.com/js/script.js
# VITE_ANALYTICS_API_URL=

# Enable debug mode for analytics (logs events to console)
# VITE_ANALYTICS_DEBUG=false

# Third-party Services
# Font Awesome Kit URL (if using Pro version)
# VITE_FONTAWESOME_KIT_URL=

# Build Configuration
# Enable source maps in production (not recommended)
# VITE_ENABLE_SOURCE_MAPS=false

# Testing
# API mock server URL for tests
# VITE_TEST_API_URL=http://localhost:3001

# Note: All environment variables must be prefixed with VITE_ to be
# accessible in the client-side code via import.meta.env
