{
  "name": "paperlyte-v2",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "generate:icons": "node scripts/generate-icons.js",
    "generate:mockups": "node scripts/generate-mockups.js",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate:icons && npm run generate:mockups",
    "build": "tsc -b && vite build && node scripts/inject-dates.js",
    "postbuild": "node scripts/generate-sitemap.cjs",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"*.{js,ts,json,md}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lighthouse": "npm run build && npx @lhci/cli autorun",
    "size": "size-limit"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fortawesome/fontawesome-svg-core": "^7.2.0",
    "@fortawesome/free-brands-svg-icons": "^7.2.0",
    "@fortawesome/free-solid-svg-icons": "^7.2.0",
    "@fortawesome/react-fontawesome": "^3.2.0",
    "@sentry/react": "^10.39.0",
    "@vercel/analytics": "^1.6.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@codecov/rollup-plugin": "^1.9.1",
    "@eslint/js": "^10.0.1",
    "@lhci/cli": "^0.15.1",
    "@netlify/functions": "^5.1.2",
    "@playwright/test": "^1.58.2",
    "@size-limit/preset-app": "^12.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.22",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "terser": "^5.46.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.4"
  },
  "size-limit": [
    {
      "name": "Main bundle (JS)",
      "path": "dist/assets/*.js",
      "limit": "150 KB",
      "gzip": true
    },
    {
      "name": "Main bundle (CSS)",
      "path": "dist/assets/*.css",
      "limit": "30 KB",
      "gzip": true
    }
  ],
  "overrides": {
    "axios": "^1.13.5",
    "qs": "^6.14.2",
    "tmp": "^0.2.5",
    "undici": "^7.20.0"
  }
}
