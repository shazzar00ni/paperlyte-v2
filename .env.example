# Paperlyte Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control

# Development server configuration
# Port for Vite dev server (default: 5173)
# VITE_PORT=5173

# API Configuration (when backend is implemented)
# Base URL for API endpoints
# VITE_API_BASE_URL=http://localhost:3000/api

# Feature Flags (for gradual rollout of new features)
# Enable dark mode feature
# VITE_FEATURE_DARK_MODE=false
# Enable analytics
# VITE_FEATURE_ANALYTICS=false

# Analytics Configuration (privacy-first, GDPR-compliant)
# Analytics service endpoint (when implemented)
# VITE_ANALYTICS_ENDPOINT=
# Anonymous analytics ID
# VITE_ANALYTICS_ID=

# Third-party Services
# Font Awesome Kit URL (if using Pro version)
# VITE_FONTAWESOME_KIT_URL=

# Build Configuration
# Enable source maps in production (not recommended)
# VITE_ENABLE_SOURCE_MAPS=false

# Testing
# API mock server URL for tests
# VITE_TEST_API_URL=http://localhost:3001

# Note: All environment variables must be prefixed with VITE_ to be
# accessible in the client-side code via import.meta.env
